<script>
  var idStranke = {{idStranke}};
</script>
<div class="container text-center">
  <div class="row">
    <div class="col-md-6">
      <h3><i class="fa-solid fa-earth-europe"></i>Iskanje turističnih
        zanimivosti</h3>
      <div id="destinacije">
        {{#each seznamDestinacij as |destinacija|}}
          <div id="{{destinacija.id}}" class="destinacija">
            <button
              type="button"
              class="btn btn-light btn-sm"
            >
              <i class="fas fa-plus"></i>
              <strong><span
                  class="ime"
                  dir="ltr"
                >{{destinacija.ime}}</span></strong>
              <span
                class="lat"
                style="display: none"
              >{{destinacija.zemljepisnaSirina}}</span>
              <span
                class="lng"
                style="display: none"
              >{{destinacija.zemljepisnaDolzina}}</span>
              <div style="display: none" class="text-nowrap"></div>
            </button>
          </div>
        {{/each}}
      </div>
    </div>
    <div class="col-md-6">
      <h3><i class="fas fa-shopping-cart me-2"></i>Košarica turističnih
        zanimivosti</h3>
      <div id="kosarica"></div>
      <div id="sporocilo"></div>
      <button
        id="racun_html"
        type="button"
        class="btn btn-success btn-sm"
        disabled
      >
        <i class="fa-solid fa-euro-sign"></i>Pripravi račun (HTML)
      </button>
      <button
        id="racun_xml"
        type="button"
        class="btn btn-success btn-sm"
        disabled
      >
        <i class="fa-solid fa-euro-sign"></i>Pripravi račun (XML)
      </button>
      <br />
      <div id="mapa_id" class="mt-3" style="margin-top: 20px;"> </div>
      <div class="mapa_poti"></div>
      <h3 style="margin-top: 20px;"><i class="fa-solid fa-heart"></i>
      Seznam priljubljenih destinacij</h3>
      <div id="seznamPriljubljenih">
      </div>
    </div>
  </div>
</div>

<script src="skripte/seznam.js"></script>

<!-- leaflet knjižnica za poti -->
<script src="skripte/leaflet-routing-machine.js"></script>
<script src="https://canvasjs.com/assets/script/jquery.canvasjs.min.js"></script>